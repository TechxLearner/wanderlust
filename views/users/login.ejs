<% layout('/layouts/boilerplate.ejs') -%>

    <div class="row">
        <div class="col-6 offset-3">
            <h2 class="mt-3">Login for Wanderlust</h2>
            <form action="/login" method="POST" novalidate class="needs-validation mt-4">
                <div class="mb-3">
                    <label for="username" class="form-lable">User Name</label>
                    <input type="text" id="username" class="form-control" placeholder="Enter User name" name="username"
                        required>
                    <div class="invalid-feedback"> Please enter a vaild username</div>
                    <div class="valid-feedback"> Looks good</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-lable">Password</label>
                    <input type="password" required class="form-control" placeholder="Enter your password"
                        name="password" id="password">
                    <div class="invalid-feedback"> Please enter a valid password</div>
                    <div class="valid-feedback"> Looks good</div>
                </div>
                <div class="mt-3 offset-8 mb-3">
                    <a href="/signup">Don't have an account?</a>
                </div>

                <button class="btn btn-dark mb-5">Submit</button>
            </form>
        </div>
    </div>

    <script src="/js/script.js"></script>