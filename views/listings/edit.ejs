<% layout('/layouts/boilerplate.ejs') -%>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h2 class="mt-3">Edit this Listing</h2>
                <form action="/listings/<%= listing._id %>?_method=PUT" method="POST"
                    novalidate class="needs-validation">
                    <div class="mt-3">
                        <label for="title" class="form-lable">Title</label>
                        <input type="text" required class="form-control" value="<%= listing.title %>"
                            name="listing[title]">
                        <div class="invalid-feedback"> Please enter a Title</div>
                    </div>
                    <div class="mt-3">
                        <label for="description" class="form-lable">Description</label>
                        <textarea type="text" required class="form-control"
                            name="listing[description]"><%= listing.description %></textarea>
                        <div class="invalid-feedback"> Please enter atleast 10 word of Description</div>
                    </div>
                    <!-- Button trigger modal -->
                    <a type="button" class="mt-3 link-info link-offset-2" data-bs-toggle="modal"
                        data-bs-target="#exampleModal">
                        Preview Original Image
                    </a>
                    <!-- original image preview modal  -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Original Image Preview</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body mx-auto">
                                    <img class="rounded" src="<%= listing.image %>" alt="<%= listing.title %>" width="100%"
                                        height="100%" srcset="">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="image" class="form-lable">Listing Image URL</label>
                        <input type="text" class="form-control" name="listing[image]" placeholder="Enter Image Url">
                        <div class="invalid-feedback">Please Enter a Image URL</div>
                    </div>
                    <div class="row">
                        <div class="mt-3 col-md-4">
                            <label for="price" class="form-lable">Price</label>
                            <input type="number" required class="form-control" value="<%= listing.price %>"
                                name="listing[price]">
                            <div class="invalid-feedback"> Please enter a Vaild Price</div>
                        </div>
                        <div class="mt-3 col-md-8">
                            <label for="location" class="form-lable">Location</label>
                            <input type="text" required class="form-control" value="<%= listing.location %>"
                                name="listing[location]">
                            <div class="invalid-feedback"> Please enter location</div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <label for="country" class="form-lable">Country</label>
                        <input type="text" required class="form-control" value="<%= listing.country %>"
                            name="listing[country]">
                        <div class="invalid-feedback"> Please enter Country</div>
                    </div>
                    <button class="btn btn-dark mt-3" type="submit">Submit</button>
                </form>

            </div>
        </div>
    </body>
    <script src="/js/script.js"></script>