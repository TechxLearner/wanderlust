<% layout('/layouts/boilerplate.ejs') -%>

    <div class="listings-container">
        <h2>All listings</h2>
    
        <div class="d-flex justify-content-evenly mb-3">
            <p id="showTotalListings"></p>
            <div class="form-switch form-check-reverse mb-3 align-self-end">
                <input class="form-check-input" type="checkbox" id="switchCheckReverse">
                <label class="form-check-label" for="switchCheckReverse">View Total Number to Listing</label>
            </div>
        </div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for(let listing of allListings) { %>
                <a href="/listings/<%= listing._id %>" class="listing-link">
                    <div class="card col listing-card">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listingImage"
                            style="height: 20rem;">
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %>
                                </b>
                                <br>
                                &#8377;<%= listing.price.toLocaleString("en-IN")%> / Night
                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>
    </div>

    <script>
        const switchCheckReverse = document.getElementById("switchCheckReverse");
        switchCheckReverse.addEventListener("click", () => {
            // tnis function will discplay total number to listing in database
            document.getElementById("showTotalListings").innerHTML = switchCheckReverse.checked ? "Total Listings: <%= totalListings %>" : "";

        });
    </script>