<style>
  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 2rem 0.5rem 2rem;
  }

  .search-btn {
    border-radius: 25px;
  }

  .search-icon {
    display: inline;
    color: #dc3545;
    margin-right: 5px;
  }

  nav {
    background-color: #fff !important;
  }

  @media (min-width: 0px) and (max-width: 766px) {
    .search-frm{
      margin-top: 5px !important;
    }
    .signBtn, .loginBtn {
      margin: 15px !important;
    }
    .auth-btns{
      margin: 15px !important;
    }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-tertiary border-bottom sticky-top" data-bs-theme="light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/"><i class="fa-regular fa-compass fa-xl" style="color: #f00a0a;"></i><span
        class="nav-txt-color">Wanderlust</span>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar"
      aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Wanderlust</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body justify-content-between">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/listings">All listings</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/listings/new">New Listing</a>
          </li>
        </ul>
        <form class="d-flex mx-auto search-frm" role="search">
          <input class="form-control me-2 search-inp" type="search" placeholder="Search Destinations" />
          <button class="btn btn-outline-danger search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass fa-lg search-icon"></i>Search
          </button>
        </form>

        <div class="navbar-nav ms-auto auth-btns">
          <% if (!currUser) { %>
            <a class="btn btn-outline-success mx-2 signBtn" href="/signup">Signup</a>
            <a class="btn btn-outline-success mx-2 loginBtn" href="/login">Login</a>
            <% } %>
              <% if (currUser) { %>
                <p style="margin: 6px 1px 1px 1px;" class="nav-user-name mx-4">Welcome Back! <strong
                    style="font-weight: bold; font-size: 18px; color: #ef6c3b;">&nbsp;<%=
                      currUser.username.toUpperCase() %></strong></p>
                <a class="btn btn-outline-danger" href="/logout">Logout</a>
                <% } %>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  let searchBtn = document.querySelector(".search-btn");
  let searchIcon = document.querySelector(".search-icon");

  searchBtn.addEventListener("mouseenter", () => {
    searchIcon.style.color = "white";
  });

  searchBtn.addEventListener("mouseleave", () => {
    searchIcon.style.color = "#dc3545";
  });
</script>