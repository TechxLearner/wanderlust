<style>
  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 2rem 0.5rem 2rem;
  }

  .search-btn {
    border-radius: 25px;
  }

  .search-icon {
    display: inline;
    color: #dc3545;
    margin-right: 5px;
  }
</style>

<nav class="navbar navbar-expand-md bg-body-white border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/"><i class="fa-regular fa-compass fa-xl" style="color: #f00a0a;"></i><span
        class="nav-txt-color">Wanderlust</span>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/listings">All listings</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/listings/new">New Listing</a>
        </li>
        <!-- <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Dropdown link
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">Action</a></li>
            <li><a class="dropdown-item" href="#">Another action</a></li>
            <li><a class="dropdown-item" href="#">Something else here</a></li>
          </ul>
        </li> -->
      </ul>

      <form class="d-flex mx-auto" role="search">
        <input class="form-control me-2 search-inp" type="search" placeholder="Search Destinations" />
        <button class="btn btn-outline-danger search-btn" type="submit">
          <i class="fa-solid fa-magnifying-glass fa-lg search-icon"></i>Search
        </button>
      </form>

      <div class="navbar-nav ms-auto">
        <% if (!currUser) { %>
          <a class="btn btn-outline-success mx-2" href="/signup">Signup</a>
          <a class="btn btn-outline-success mx-2" href="/login">Login</a>
          <% } %>
            <% if (currUser) { %>
              <p style="margin: 6px 1px 1px 1px;" class="nav-user-name mx-4">Welcome Back! <strong
                  style="font-weight: bold; font-size: 18px; color: #ef6c3b;">&nbsp;<%= currUser.username.toUpperCase()
                    %></strong></p>
              <a class="btn btn-outline-danger" href="/logout">Logout</a>
              <% } %>
      </div>
    </div>
  </div>
</nav>

<script>
  let searchBtn = document.querySelector(".search-btn");
  let searchIcon = document.querySelector(".search-icon");

  searchBtn.addEventListener("mouseenter", () => {
    searchIcon.style.color = "white";
  });

  searchBtn.addEventListener("mouseleave", () => {
    searchIcon.style.color = "#dc3545";
  });
</script>